<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Xamarin_DataBinding"
             x:Class="Xamarin_DataBinding.MainPage">
    <ContentView>
        <Label Text="Voorbeeld van een TwoWay Binding" />
        <Entry Text="{Binding HelloWorld, Mode=TwoWay}" />
        <StackLayout>
            <Label Text="Je input was:" />
            <Label Text="{Binding HelloWorld}"/>
        </StackLayout>

        <Label Text="Voorbeeld van een OneWay Binding" />
        <Entry Text="{Binding HelloWorld, Mode=OneWay}" />
    </ContentView>
</ContentPage>